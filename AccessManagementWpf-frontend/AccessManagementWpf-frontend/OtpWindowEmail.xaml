<Window x:Class="AccessManagementWpf_frontend.OtpWindowEmail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AccessManagementWpf_frontend"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="OtpWindowEmail" Height="450" Width="800">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Label Row -->
            <RowDefinition Height="Auto"/>
            <!-- OTP Input Row -->
            <RowDefinition Height="Auto"/>
            <!-- Button Row -->
        </Grid.RowDefinitions>

        <!-- Label -->
        <Label Content="Enter OTP" FontSize="20" FontWeight="Light"
       HorizontalAlignment="Center" Margin="0,20,0,10"
       Grid.Row="0"/>

        <!-- OTP Input -->
        <TextBox x:Name="txtOTP" Height="40" Width="400"
         HorizontalAlignment="Center" VerticalContentAlignment="Center"
         HorizontalContentAlignment="Center" FontSize="18" Margin="0,10,0,20" Grid.Row="1"/>

        <!-- Button Panel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Exit" Width="100" FontSize="16" Height="35"
            Click="Button_Click" Margin="10,0"/>
            <Button x:Name="btnSubmit" Content="Submit" Height="35" Width="100" FontSize="16"
            Click="btnSubmit_Click" Margin="10,0"/>
        </StackPanel>

    </Grid>
</Window>
